nav#pagination

  //- previous page link, some pages may have a different url
  if page.prev_link
    a(class='prev', href=url_for(page.prev_link))
      i.icon.ion-chevron-left
      span.mobile-pagination Prev
  else if page.prev && page.prev.path
    a(class='prev', href=url_for(page.prev.path))
      i.icon.ion-chevron-left
      span.mobile-pagination Prev

  //- next page link, again the logic is different on different pages
  if page.next_link
    a(class='next', href=url_for(page.next_link))
      span.mobile-pagination Next
      i.icon.ion-chevron-right
  else if page.next && page.next.path
    a(class='next', href=url_for(page.next.path))
      span.mobile-pagination Next
      i.icon.ion-chevron-right
