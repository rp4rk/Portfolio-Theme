if site.posts.length > 0
  #recent-posts.row
    each post in site.posts.sort('date', -1).limit(5).toArray()
      .recent-post-item.four.columns
        #post(style="background: url('img/" + post.title + ".jpg');")
          .details
            a(href=config.root + post.path)= post.title
            if post.date
              time(datetime=post.date.toJSON())= date(post.date, date_format)
