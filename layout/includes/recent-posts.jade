if site.posts.length > 0
  #recent-posts.row.container
    h1 Recent Work
    div.u-full-width
      each post in site.posts.sort('date', -1).limit(3).toArray()
        .recent-post-item.four.columns
          a(href=config.root + post.path)#article(style="background: url('img/" + post.title + ".jpg');")
            .details
              h5= post.title
              if post.date
                time(datetime=post.date.toJSON())= date(post.date, date_format)
